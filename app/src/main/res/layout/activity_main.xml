<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.tudor.socialdrinker.MainActivity"
    android:background="@drawable/background_bottles"
    >

    <Button
        android:id="@+id/search"
        android:layout_width="170dp"
        android:layout_height="170dp"
        android:text="Search Drinks"
        android:typeface="serif"
        android:textColor="#ffffff"
        tools:layout_editor_absoluteY="231dp"
        tools:layout_editor_absoluteX="148dp"
        android:background="@drawable/roundedbutton"
        android:layout_marginLeft="18dp"
        android:layout_marginStart="18dp"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/recomandations"
        android:layout_width="145dp"
        android:layout_height="145dp"
        android:background="@drawable/roundedbutton"
        android:text="This week's recomandations"
        android:textColor="#ffffff"
        android:typeface="serif"
        tools:layout_editor_absoluteX="148dp"
        tools:layout_editor_absoluteY="231dp"
        android:layout_marginBottom="73dp"
        android:layout_alignBottom="@+id/facebook"
        android:layout_toRightOf="@+id/search"
        android:layout_toEndOf="@+id/search"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp" />

    <Button
        android:id="@+id/facebook"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:background="@drawable/roundedbutton"
        android:text="folow us on facebook"
        android:textColor="#ffffff"
        android:typeface="serif"
        tools:layout_editor_absoluteX="148dp"
        tools:layout_editor_absoluteY="231dp"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="33dp"
        android:layout_marginStart="33dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="250dp"
        android:layout_height="200dp"
        app:srcCompat="@drawable/logodrinker"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
